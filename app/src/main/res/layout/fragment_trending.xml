<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    tools:context=".TrendingFragment">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout

                android:id="@+id/textandim"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageView"
                    android:layout_width="47dp"
                    android:layout_height="44dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="-56dp"
                    android:layout_toStartOf="@+id/imageView5"
                    android:paddingLeft="2dp"
                    android:src="@drawable/man"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="2dp" />


                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/ic_bell2" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="41dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="85dp"
                    android:text="Hi, iam Yogesh Kumar.."
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:paddingLeft="2dp"
                    android:text="Yogesh Kumar"
                    android:textColor="@color/colorAccent"
                    android:textSize="10sp" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="22dp"
                    android:layout_height="21dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="56dp"
                    app:srcCompat="@drawable/ic_check" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    app:srcCompat="@drawable/ic_more2" />


            </RelativeLayout>

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/textandim"
                app:srcCompat="@drawable/sampleimage" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@+id/imageView7">

                <TextView
                    android:id="@+id/textView32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="9dp"
                    android:text="Like"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/imageView52"
                    android:layout_width="25dp"

                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="3dp"
                    android:layout_toEndOf="@+id/textView32"
                    app:srcCompat="@drawable/ic_like2" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="9dp"
                    android:layout_toEndOf="@+id/imageView52"
                    android:text="590k"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp" />


                <ImageView
                    android:id="@+id/imageView32"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="-128dp"
                    android:layout_toStartOf="@+id/textView22"
                    android:src="@drawable/ic_follow2" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="128dp"
                    android:layout_marginTop="9dp"
                    android:text="Views"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="9dp"
                    android:layout_toEndOf="@+id/textView22"
                    android:text="5.6M"
                    android:textColor="@android:color/background_dark"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="118dp"
                    android:layout_marginTop="-4dp"
                    android:paddingTop="5dp"
                    app:srcCompat="@drawable/ic_time2" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="-118dp"
                    android:layout_marginTop="0dp"
                    android:layout_toEndOf="@+id/imageView8"
                    android:paddingTop="9dp"
                    android:text="2 Min"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="-3dp"
                    android:layout_marginTop="9dp"
                    android:layout_toStartOf="@+id/imageView9"
                    android:text="Send To"
                    android:textColor="@android:color/background_dark"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="26dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="3dp"
                    app:srcCompat="@drawable/ic_trending3" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="17dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="-10dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="-2dp"
                    android:layout_toStartOf="@+id/imageView10"
                    android:src="@drawable/ic_next" />

            </RelativeLayout>


        </RelativeLayout>


    </RelativeLayout>

</FrameLayout>